<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="400.0" spacing="15.0" styleClass="form-container" stylesheets="@nueva_alerta.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Crear Nueva Alerta">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label styleClass="form-label" text="Nombre *" />
            <TextField promptText="Escriba aquí" styleClass="form-field" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label styleClass="form-label" text="Limite (€)*" />
            <TextField fx:id="txtAlertaLimite" promptText="0.00" styleClass="form-field-money" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label styleClass="form-label" text="Periodicidad" />
            <ComboBox fx:id="comboPeriodicidad" prefWidth="295.0" promptText="Seleccionar..." styleClass="combo-box-base" stylesheets="@nuevaalerta.css" />
         </children>
      </VBox>
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label styleClass="form-label" text="Categoría" />
            <HBox spacing="10.0">
               <children>
                  <ComboBox fx:id="comboAlertaCategoria" maxWidth="1.7976931348623157E308" promptText="Seleccionar..." HBox.hgrow="ALWAYS">
                     <styleClass>
                        <String fx:value="form-field" />
                        <String fx:value="combo-box-base" />
                     </styleClass>
                  </ComboBox>
                  <Button mnemonicParsing="false" onAction="#botonCategorias" styleClass="btn-icon-secondary" text="+">
                     <tooltip>
                        <Tooltip text="Crear nueva categoría" />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="CancelarNo" mnemonicParsing="false" onAction="#cancelarRegistro" styleClass="btn-cancel" text="Cancelar">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Region HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Region>
            <Button fx:id="GuardarAlertaButton" mnemonicParsing="false" onAction="#guardarAlerta" styleClass="btn-save" text="Guardar Alerta" />
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
